{
  "featureset": {
    "features": [
      {
        "name": "sku_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match": {
            "sku": "{{keywords}}"
          }
        }
      },
      {
        "name": "manufacturer_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match": {
            "manufacturer": "{{keywords}}"
          }
        }
      },
      {
        "name": "name_match",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match": {
            "name": "{{keywords}}"
          }
        }
      },
      {
        "name": "name_avg_raw_tp",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match_explorer": {
            "type": "avg_raw_tp",
            "query": {
                "match": {
                    "name": "{{keywords}}"
                }
            }
          }
        }
      },
      {
        "name": "name_phrase",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match_phrase": {
            "name": {
              "query": "{{keywords}}",
              "slop": 6
            }
          }
        }
      },
      {
        "name": "name_hyphens",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match_phrase": {
            "name.hyphens": {
              "query": "{{keywords}}",
              "slop": 1
            }
          }
        }
      },
      {
        "name": "artistName_phrase",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match_phrase": {
            "artistName": {
              "query": "{{keywords}}",
              "slop": 3
            }
          }
        }
      },
      {
        "name": "shortDescription_phrase",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "match_phrase": {
            "longDescription": {
              "query": "{{keywords}}",
              "slop": 6
            }
          }
        }
      },
      {
        "name": "customerReviewCount",
        "params": [
          "keywords"
        ],
        "template_language": "mustache",
        "template": {
          "function_score": {
            "functions": [{
                "field_value_factor": {
                    "field": "customerReviewCount",
                    "missing": 0.0
                }
            }],
            "query": {
                "match_all": {}
            }
        }
        }
      },
      {
        "name": "salesRankLongTerm",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "functions": [
              {
                "filter": {
                  "exists": {
                    "field": "salesRankLongTerm"
                  }
                },
                "gauss": {
                  "salesRankLongTerm": {
                    "origin": "1.0",
                    "offset": "100",
                    "scale": "10000",
                    "decay": "0.1"
                  }
                }
              },
              {
                "filter": {
                  "bool": {
                    "must_not": {
                      "exists": {
                        "field": "salesRankLongTerm"
                      }
                    }
                  }
                },
                "script_score": {
                  "script": "if (doc['salesRankLongTerm'] == null || doc['salesRankLongTerm'].size() == 0  ){return 0.0}"
                }
              }
            ],
            "query": {
              "match_all": {}
            }
          }
        }
      },
      {
        "name": "script_availability",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "script_score": {
              "script": "if (doc['onlineAvailability'][0] == false){return 0.0} else {return 1.0}"
            }
          }
        }
      },
      {
        "name": "script_isMusicOrMovie",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "script_score": {
              "script": {
                "lang" : "painless",
                "source": "if (doc['departmentId'] == null || doc['departmentId'].size() == 0 ) {return 0.0;} else if (doc['departmentId'].value == 8) {return 1.0;}"
              }
            }
          }
        }
      },
      {
        "name": "script_isBargain",
        "template_language": "mustache",
        "template": {
          "function_score": {
            "script_score": {
              "script": {
                "lang" : "painless",
                "source": "if (doc['regularPrice'] == null || doc['regularPrice'].size() == 0 || doc['salePrice'] == null || doc['salePrice'].size() == 0) {return 0.0;} else {return doc['regularPrice'].value - doc['salePrice'].value;}"
              }
            }
          }
        }
      }
    ]
  }
}